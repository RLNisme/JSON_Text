<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>

            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#616161"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                            android:startColor="#00E676"
                            android:endColor="#00E676"
                            android:angle="90" />
                    <corners
                            android:radius="2dp"/>
                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>

            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#616161"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="2px">
                <shape>
                    <padding android:bottom="3dp"/>
                    <gradient
                            android:endColor="#00C853"
                            android:startColor="#00C853"

                            android:angle="270" />
                    <corners
                            android:radius="2dp"/>
                    <padding
                            android:left="10dp"
                            android:top="10dp"
                            android:right="10dp"
                            android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>